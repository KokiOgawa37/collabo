<div class='container-fruid'>
    <div class='col-xs-4'>
        <h1>新規投稿</h1>
        <%= form_for(@article) do |f| %>
            <h4>タイトル</h4>
            <%= f.text_field :title %>
            <h4>天気</h4>
            <%= f.text_field :weather %>
            <h4>本文</h4>
            <%= f.text_area :body %>
            <h4>画像</h4>
            <%= f.attachment_field :image %>

            <%= f.submit '投稿' %>
        <% end %>
    </div>

    <div class='col-xs-8'>
        <h1>投稿一覧</h1>
        <table class='table'> 
            <tr>
                <th>タイトル</th>
                <th>天気</th>
                <th>本文</th>
                <th>画像</th>
            </tr>
            <% @articles.each do |article| %>
                <tr>
                    <td>
                        <span>
                            <%= link_to article.title, article_path(article.id) %>
                        </span>
                    </td>
                    <td>
                        <%= article.weather %>
                    </td>
                    <td>
                        <%= article.body %>
                    </td>
                    <td>
                        <%= attachment_image_tag article, :image, :fill, 100, 100, format: 'jpeg', fallback:'noimage.png' %>
                    </td>
                </tr>
        <% end %>
        </table>
    </div>
</div>